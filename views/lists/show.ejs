<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/scss/style.css" />
    <title><%= list.title %></title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= list.title %></h1>
    <h2><%= list.description %></h2>
    <h3><a href="/users/<%= user._id %>/lists/<%= list._id %>/addGame">Add a Game</a></h3>
    <ul>
      <% if (list.games.length > 0) { %> <% list.games.forEach((game) => { %>
        <li><%= game.title %>
            <br>
            <%= game.rating %> / 10
            <br>
            <%= game.review %>
            <br>
            <a href="/users/<%= user._id %>/lists/<%= list._id %>/<%= game._id %>/edit">Edit Game</a>
            <form action="/users/<%= user._id %>/lists/<%= list._id %>/<%= game._id %>?_method=DELETE" method="post">
              <button type="submit" class="btn btn-outline-danger btn-sm">Remove game from list</button>
            </form>
        </li>
      </a>
      <% }) %> <% } else { %>
      <p>No games were added yet</p>
      <% } %>
    </ul>


    <a href="/users/<%= user._id %>/lists/<%= list._id %>/edit">
      <button class="btn btn-outline-warning btn-sm">Edit List Details</button>
    </a>

    <form
      action="/users/<%= user._id %>/lists/<%= list._id %>?_method=DELETE"
      method="POST"
    >
      <button type="submit" class="btn btn-primary">Delete list</button>
  </body>
</html>
